
<div class="banner">
    <div {{#if banner.Autoplay}}data-banner-autoplay="{{banner.AutoplaySekunden}}"{{/if}} class="image-container">
        {{#each banner.Bilder}}
        <img src="{{apiUrl}}{{url}}" alt="{{alternativeText}}" class="banner-pic">
        {{/each}}
    </div>
    <div class="banner-arrows">
        <div class="banner-arrow" id="banner-arrow-left" ></div>
        <div class="banner-arrow" id="banner-arrow-right" ></div>
    </div>
    <div class="banner-dots"></div>
</div>
<div class="container home-container">
    <h2>Herzlich Willkommen beim <div>SV KAROW 96</div></h2>
    <p>{{page.Begruessungstext}}</p>
    <div class="home-boxes">
        {{#if page.Spielertext}}
        <div class="home-box">
            <h3>SPIELER</h3>
            {{page.Spielertext}}
        </div>
        {{/if}}
        {{#if page.Trainertext}}
        <div class="home-box">
            <h3>TRAINER / CO-TRAINER</h3>
            {{page.Trainertext}}
        </div>
        {{/if}}
        {{#if page.Schiedsrichtertext}}
        <div class="home-box">
            <h3>SCHIEDSRICHTER</h3>
            {{page.Schiedsrichtertext}}
        </div>
        {{/if}}
        {{#if page.Sponsorentext}}
        <div class="home-box">
            <h3>SPONSOREN</h3>
            {{page.Sponsorentext}}
        </div>
        {{/if}}
    </div>
    <h3>Vereinsgeschichte</h3>
    {{#if page.Geschichtstext}}
    <div class="history">
        <div class="text">{{page.Geschichtstext}}</div>
        <a href="/geschichte" class="button">
            <div class="button-text">Zur Vereinsgeschichte</div>
            <div class="button-arrow"></div>
        </a>
    </div>
    {{/if}}
    <h3>Vereinsspielplan</h3>
    <div class="club-widget">
        <div id="widget"></div>
	    <script type="text/javascript">new fussballdeWidgetAPI().showWidget('widget','02BMV8CDI0000000VUM1DNOKVT92PDQJ');</script>
    </div>
    <h3>Karow Kompakt</h3>
    {{#if teams}}
    <div class="teams-compact">
        {{#each teams}}
        <div class="team">
            <div class="name">{{Name}}</div>
            <div class="training">
                {{#if Trainingszeiten.mo}}
                <div class="day">
                    <h4>Montag</h4>
                    <div class="time">{{Trainingszeiten.mo}}</div>
                </div>
                {{/if}}
                {{#if Trainingszeiten.di}}
                <div class="day">
                    <h4>Dienstag</h4>
                    <div class="time">{{Trainingszeiten.di}}</div>
                </div>
                {{/if}}
                {{#if Trainingszeiten.mi}}
                <div class="day">
                    <h4>Mittwoch</h4>
                    <div class="time">{{Trainingszeiten.mi}}</div>
                </div>
                {{/if}}
                {{#if Trainingszeiten.do}}
                <div class="day">
                    <h4>Donnerstag</h4>
                    <div class="time">{{Trainingszeiten.do}}</div>
                </div>
                {{/if}}
                {{#if Trainingszeiten.fr}}
                <div class="day">
                    <h4>Freitag</h4>
                    <div class="time">{{Trainingszeiten.fr}}</div>
                </div>
                {{/if}}
            </div>
            {{#if Trainers}}
            <div class="info">
                {{#if Jahrgang}}Jahrgang: {{Jahrgang}}<br><br>{{/if}}
                {{#each Trainers}}
                    {{#if (isMainTrainer Sorte)}}
                        Ansprechpartner: {{Name}}<br>
                        Tel.: {{Tel}}
                    {{/if}}
                {{/each}}
            </div>
            {{/if}}
            <a href="/team/{{_id}}" class="button">
                <div class="button-text">Zum Team</div>
                <div class="button-arrow"></div>
            </a>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
{{#if page.NewsAnzeige}}
<div class="main-spacer"></div>
<div class="news-container marginizer">
    <h2>NEWS</h2>
    <a href="/news" class="button">
        <div class="button-text">Mehr Nachrichten</div>
        <div class="button-arrow"></div>
    </a>
    <div class="news-site-container">
        {{#each news}}
        <div class="news">
            <div class="news-date">{{created_time}}</div>
            {{#if picLink}}
            <img class="news-image image-viewer" src="{{picLink}}" alt="news picture">
            {{/if}}
            <div class="news-content">{{messageHTML}}</div>
            <!-- <a href="https://www.facebook.com/{{id}}" target="_blank" class="button">
                <div class="button-text">Zum Facebook Post</div>
                <div class="button-arrow"></div>
            </a> -->
        </div>
        {{/each}}
    </div>
</div>
{{/if}}
