<div class="container">
    <h2>Kleiderb√∂rse</h2>
    <div class="clothing-stock-desc marginizer">{{page.Info}}</div>
    <h3>Biete</h3>
    <div class="sell-container">
        {{#each offerProducts}}
        <div class="sell-entry">
            {{#if Bilder}}
            <div class="image-container">
                {{#each Bilder}}
                <img src="{{apiUrl}}{{url}}" alt="{{alternativeText}}" class="sell-item-image image-viewer">
                {{/each}}
            </div>
            {{/if}}
            <h4 class="title">{{Titel}}</h4>
            <div class="row">
                <div class="tel">Tel: {{Tel}}</div>
                <div class="price">{{Preis}}</div>
            </div>
            {{#if Info}}
            <div class="desc"><p>{{Info}}</p></div>
            {{/if}}
        </div>
        {{/each}}
        {{#unless offerProducts}}
        <!-- TODO: Default when no entries -->
        {{/unless}}
    </div>
    <h3>Suche</h3>
    <div class="buy-container">
        {{#each searchProducts}}
        <div class="buy-entry">
            <h4 class="title">{{Titel}}</h4>
            <div class="desc"><p>{{Beschreibung}}</p></div>
            <div class="row"><div class="tel">Tel: {{Tel}}</div></div>
        </div>
        {{/each}}
        {{#unless searchProducts}}
            <div class="buy-empty"><p>Zurzeit befindet sich niemand auf der Suche nach einem Produkt!</p></div>
        {{/unless}}
    </div>
    <!-- TODO: paginator 5 entries -->
</div>