<div class="container club-container">
    <h2>VEREIN</h2>
    {{#if gs.Text}}
    <h3>Gesch채ftsstelle</h3>
    <div class="gs">{{gs.Text}}</div>
    {{/if}}
    <h3>Vorstand / Funktion채re</h3>
    <div class="officials">
        <div class="officials-container carousel">
            {{#each officials}}
            <div class="official">
                {{#if Foto}}
                <img src="{{apiUrl}}{{Foto.url}}" alt="{{Foto.alternativeText}}" class="official-pic image-viewer">
                {{else}}
                <img src="/img/placeholder.jpg" alt="Funkion채r Platzhalter" class="official-pic">
                {{/if}}
                <div class="official-type">{{Funktion}}</div>
                <div class="official-data">
                    <div class="official-name">{{Name}}</div>
                    {{#if Tel}}Tel.: {{Tel}}<br>{{/if}}
                    {{#if Email}}E-Mail: <a href="mailto:{{Email}}">{{Email}}</a><br>{{/if}}
                    {{#if Fax}}Fax: {{Fax}}{{/if}}
                </div>
            </div>
            {{/each}}
            {{#unless officials}}
                <div class="empty-entry"><p>Es wurden keine Funktion채re gefunden!</p></div>
            {{/unless}}
        </div>
    </div>
    <h3>Schiedsrichter</h3>
    <div class="referees">
        <div class="referees-container carousel">
            {{#each referees}}
            <div class="referee">
                {{#if Foto}}
                <img src="{{apiUrl}}{{Foto.url}}" alt="{{Foto.alternativeText}}" class="referee-pic image-viewer">
                {{else}}
                <img src="/img/placeholder.jpg" alt="Schiedsrichter Platzhalter" class="referee-pic">
                {{/if}}
                <div class="referee-name">{{Name}}, {{Alter}}</div>
                {{#if Info}}
                <div class="referee-data">
                    {{Info}}
                </div>
                {{/if}}
            </div>
            {{/each}}
            {{#unless referees}}
                <div class="empty-entry"><p>Zurzeit sind keine Schiedsrichter Mitglieder des Vereins!</p></div>
            {{/unless}}
        </div>
    </div>
    <a target="_blank" href="https://berliner-fussball.de/spielbetrieb/schiedsrichter/schiedsrichter-werbekampagne/" class="button">
        <div class="button-text">Werde Schiedsrichter</div>
        <div class="button-arrow"></div>
    </a>
    <h3>Mannschaften</h3>
    <div class="team-container">
        {{#each teams}}
        <div class="team">
            <h3 class="team-name">{{Name}}</h3>
            {{#if Foto}}
            <img src="{{apiUrl}}{{Foto.url}}" alt="{{Foto.alternativeText}}" class="team-pic image-viewer">
            {{else}}
            <img src="/img/placeholder_team.jpg" alt="Team Platzhalter" class="team-pic">
            {{/if}}
            <a href="/team/{{_id}}" class="button">
                <div class="button-text">Zum Team</div>
                <div class="button-arrow"></div>
            </a>
        </div>
        {{/each}}
        {{#unless teams}}
            <div class="empty-entry"><p>Es wurden keine Teams gefunden!</p></div>
        {{/unless}}
    </div>
</div>