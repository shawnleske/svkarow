<div class="team-container container">
    <h2>{{data.Name}}</h2>
    <div class="trainers">
        <div class="trainers-container carousel">
            {{#each data.Trainers}}
            <div class="trainer">
                {{#if Foto}}
                <img src="{{apiUrl}}{{Foto.url}}" alt="{{Foto.alternativeText}}" class="trainer-pic image-viewer">
                {{else}}
                <img src="/img/placeholder.jpg" alt="Trainer Platzhalter" class="trainer-pic">
                {{/if}}
                <div class="trainer-type">{{Sorte}}</div>
                <div class="trainer-data">
                    <div class="trainer-name">{{Name}}</div>
                    {{#if Tel}}Tel.: {{Tel}}<br>{{/if}}
                    {{#if Email}}E-Mail: <a href="mailto:{{Email}}">{{Email}}</a><br>{{/if}}
                </div>
            </div>
            {{/each}}
            {{#unless data.Trainers}}
                <div class="empty-entry"><p>Es wurden keine Trainer zu diesem Team gefunden!</p></div>
            {{/unless}}
        </div>
    </div>
    <div class="training">
        <h3>Training</h3>
        <div class="location">Sportplatz Achillesstr. 79</div>
        <div class="day">
            <h4>Montag</h4>
            <div class="time">{{data.Trainingszeiten.mo}}</div>
        </div>
        <div class="day">
            <h4>Dienstag</h4>
            <div class="time">{{data.Trainingszeiten.di}}</div>
        </div>
        <div class="day">
            <h4>Mittwoch</h4>
            <div class="time">{{data.Trainingszeiten.mi}}</div>
        </div>
        <div class="day">
            <h4>Donnerstag</h4>
            <div class="time">{{data.Trainingszeiten.do}}</div>
        </div>
        <div class="day">
            <h4>Freitag</h4>
            <div class="time">{{data.Trainingszeiten.fr}}</div>
        </div>
    </div>
    {{#if data.Torschuetzen}}
    <div class="top-goalies">
        <h3>Torsch√ºtzenliste</h3>
        <table>
            <tbody>
                {{#each data.Torschuetzen}}
                <tr>
                    <td>{{place}}</td>
                    <td>{{name}}</td>
                    <td>{{goals}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{/if}}
    {{#if data.WidgetKey}}
    <div class="games-table-widget">
        <h3>Tabelle + Spiele</h3>
        <div id="widget"></div>
	    <script type="text/javascript">new fussballdeWidgetAPI().showWidget('widget','{{data.WidgetKey}}');</script>
    </div>
    {{/if}}
</div>