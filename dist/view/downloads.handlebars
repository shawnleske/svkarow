<div class="downloads-container container">
    <h2>Downloads</h2>
    <div class="flex-container">
        {{#if downloads.Statute}}
        <div class="flex-column statute">
            <h3>Satzung</h3>
            <a href="{{downloads.Statute.Link}}" class="button" target="_blank">
                <div class="button-text">{{downloads.Statute.Titel}}</div>
                <div class="button-arrow"></div>
            </a>
        </div>
        {{/if}}
        {{#if downloads.Documents}}
        <div class="flex-column documents">
            <h3>Dokumente</h3>
            {{#each downloads.Documents}}
            <a href="{{Link}}" class="button" target="_blank">
                <div class="button-text">{{Titel}}</div>
                <div class="button-arrow"></div>
            </a>
            {{/each}}
        </div>
        {{/if}}
        {{#if downloads.Others}}
        <div class="flex-column others">
            <h3>Sonstiges</h3>
            {{#each downloads.Others}}
            <a href="{{Link}}" class="button" target="_blank">
                <div class="button-text">{{Titel}}</div>
                <div class="button-arrow"></div>
            </a>
            {{/each}}
        </div>
        {{/if}}
    </div>
</div>