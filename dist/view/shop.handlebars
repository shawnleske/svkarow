<div class="shop-container container">
    <h2>Shop</h2>
    <div class="Online-shop"></div>
    <img class="online-shop-photo image-viewer" src="./img/shop.jpg" alt="online-shop">
    <a target="_blank" href="https://store11386285.ecwid.com/SV-Karow-96-c31293104" class="button">
        <div class="button-text">Zum Online Shop</div>
        <div class="button-arrow"></div>
    </a>
    <h3>Fan Shop</h3>
    {{page.Info}}
    <div class="fan-shop-container">
        {{#each products}}
        <div class="fan-shop-entry">
            <div class="image-container {{#if BilderTyp.single}}single{{else if BilderTyp.horizontal}}horizontal{{else if BilderTyp.vertical}}vertical{{/if}}">
                {{#each Bilder}}
                <img src="{{apiUrl}}{{url}}" alt="{{alternativeText}}" class="shop-item-image image-viewer">
                {{/each}}
            </div>
            <h4 class="title">{{Titel}}</h4>
            {{#if Info}}
            <div class="desc"><p>{{Info}}</p></div>
            {{/if}}
            <div class="row">
                <div class="price">{{Preis}}</div>
            </div>
        </div>
        {{/each}}
        {{#unless products}}
        <!-- TODO: Default when no entries -->
        {{/unless}}
    </div>
</div>